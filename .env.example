# ===== Required creds =====
RTT_BASE_URL=https://<YOUR-RTT-PULL-BASE>
RTT_USERNAME=<RTT_USERNAME>
RTT_PASSWORD=<RTT_PASSWORD>
TFL_APP_ID=<TFL_APP_ID>
TFL_APP_KEY=<TFL_APP_KEY>

# ===== Remote config =====
REMOTE_ENABLED=true
REMOTE_URL=http://your-config-host:8000/config.yaml
REMOTE_TIMEOUT_SECONDS=5
REMOTE_CACHE_TTL_SECONDS=60

# ===== OLED / SSD1322 256x64 on SPI0.0 =====
OLED_DRIVER=ssd1322
OLED_ROTATE=0
OLED_WIDTH=256
OLED_HEIGHT=64
SPI_PORT=0
SPI_DEVICE=0
GPIO_DC=24
GPIO_RST=25
SPI_SPEED_HZ=8000000

# ===== Font settings =====
FONT_PATH=/app/fonts/DotMatrix-Regular.ttf
FONT_BOLD_PATH=
FONT_SIZE=22
LINE_HEIGHT=24
LEFT_MARGIN=4
INTERLEAVE=false

# ===== Defaults =====
NR_CRS=WNC
NR_TO_CRS=PAD
NR_ARRIVALS=false
NR_LIMIT=6

TUBE_STOPPOINT=940GZZLUSWK
TUBE_LIMIT=6